
@{
    ViewBag.Title = "Imagen A4";
}

<h2>Imagen hoja A4</h2>

<div>   
    <form method="post" action='@Url.Action("GuardarPDF")'>

            <div class="demo-section k-content">


                Ancho Pagina:
                <input type="number" name="Ancho" min="1" value="796">
                Largo Pagina:
                <input type="number" name="largo" min="1" value="1123">


                @(Html.Kendo().Upload()
                                                                                                                 .Name("files")
                                                                                                                 .Multiple(false)
                                                                                                                 //.ShowFileList(false)
                                                                                                                 .HtmlAttributes(new { aria_label = "files" })
             

                                                                                                                 .Validation(validation => validation.AllowedExtensions(new string[] { ".gif", ".jpg", ".png" }))

                )


                <p style="padding-top: 1em; text-align: right">

                    <button type="submit" class="k-button k-primary">Ver imagen A4-PDF</button>

                </p>


            </div>
        </form>

</div>

